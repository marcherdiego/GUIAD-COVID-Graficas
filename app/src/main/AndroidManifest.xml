<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nerdscorner.guiad.stats">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CovidStats">
        <activity android:name=".ui.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.MainActivity" />
        <activity
            android:name=".ui.activities.MobilityActivity"
            android:label="@string/mobility_data_title" />
        <activity
            android:name=".ui.activities.RawDataGeneralStatsActivity"
            android:label="@string/data_by_date" />
        <activity
            android:name=".ui.activities.CreditsActivity"
            android:label="@string/credits_title" />
        <activity
            android:name=".ui.activities.P7StatsActivity"
            android:label="@string/pt_stats_title" />
        <activity
            android:name=".ui.activities.DeceasesStatsActivity"
            android:label="@string/deceases_stats_title" />
        <activity
            android:name=".ui.activities.GeneralStatsActivity"
            android:label="@string/general_stats_title" />
        <activity
            android:name=".ui.activities.StatsCtiActivity"
            android:label="@string/cti_stats_title" />
        <activity
            android:name=".ui.activities.StatsByCityActivity"
            android:label="@string/data_by_city_stats_title" />
        <activity
            android:name=".ui.activities.StatsVaccineBySegmentActivity"
            android:label="@string/data_vaccine_by_segment_title" />
        <activity
            android:name=".ui.activities.StatsVaccineByAgeActivity"
            android:label="@string/data_vaccine_by_age_title" />
        <activity
            android:name=".ui.activities.StatsVaccineGlobalActivity"
            android:label="@string/vaccination_global_data_title" />
        <activity
            android:name=".ui.activities.StatsVaccineByCityActivity"
            android:label="@string/vaccination_by_city_data_title" />
    </application>

</manifest>